@model ErrorsModel
@{
    ViewData["Title"] = "Панель администратора";
}

<h1>Вход</h1>
<div class="container">
    <form class="form-group" action="/Admin/AdminHome/TryLogIn" method="post">
        <label class="form-text" for="username">Логин</label>
        <input class="form-control" type="text" name="username" />
        <label class="form-text" for="password">Пароль</label>
        <input class="form-control" type="password" name="password" />
        <button class="btn btn-success mt-1" type="submit">Войти</button>
        @if (Model.Errors.ContainsKey("failLogIn"))
        {
            <label class="form-text text-danger">
                @Model.Errors["failLogIn"];
            </label>
        }
    </form>
</div>

