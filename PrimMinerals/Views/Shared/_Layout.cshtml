<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimMinerals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="http://fonts.googleapis.com/css?family=PT+Sans:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/MySroller.css">
    <link rel="stylesheet" href="~/css/Counter.css">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.min.js"></script>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="row align-items-center w-100">
                    <div class="col-md-auto">
                        <a class="navbar-brand align-self-start" asp-area="" asp-controller="Home" asp-action="Index">PrimMinerals</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="col container-fluid">
                        <form class="form-inline w-100" action="@Url.Action(nameof(SearchController.Index),"Search")" method="get">
                            <input class="form-control" type="search" name="query" placeholder="Поиск по сайту" />
                            <button class="btn btn-outline-success my-2 my-sm-0 ml-1" type="submit">Поиск</button>
                        </form>
                    </div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Index","Order")" class="text-decoration-none text-body text-center">
                            <div class="row">
                                <div class="col text-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-basket-fill" viewBox="0 0 16 16">
                                        <path d="M5.071 1.243a.5.5 0 0 1 .858.514L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15.5a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5H15v5a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V9H.5a.5.5 0 0 1-.5-.5v-2A.5.5 0 0 1 .5 6h1.717L5.07 1.243zM3.5 10.5a.5.5 0 1 0-1 0v3a.5.5 0 0 0 1 0v-3zm2.5 0a.5.5 0 1 0-1 0v3a.5.5 0 0 0 1 0v-3zm2.5 0a.5.5 0 1 0-1 0v3a.5.5 0 0 0 1 0v-3zm2.5 0a.5.5 0 1 0-1 0v3a.5.5 0 0 0 1 0v-3zm2.5 0a.5.5 0 1 0-1 0v3a.5.5 0 0 0 1 0v-3z" />
                                    </svg>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col text-center">
                                    @if (Context.Session.TryGetCart(out Cart cart) && cart.TotalCount > 0)
                                    {
                                        <p>@cart.TotalPrice&#8381;</p>
                                    }
                                    else
                                    {
                                        <p>Корзина пуста</p>

                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-5">
        <div class="row">
            <div class="col-2">
                <div class="container bg-white border-bottom box-shadow mb-3 align-self-start">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="row w-100 h-auto text-center">
                            <div class="col-md-auto text-center">
                                Категория @(i+1);
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col">
                <main role="main" class="container-fluid" >
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PrimMinerals - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.mousewheel.min.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.smoothDivScroll-1.3.js"></script>
    <script src="~/lib/jquery/dist/jquery.jquery.smoothdivscroll-1.3-min.js"></script>
    <script src="~/lib/jquery/dist/jquery-ui-1.8.23.custom.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
